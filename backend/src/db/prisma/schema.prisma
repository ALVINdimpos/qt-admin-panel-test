// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  role       String   // "admin" | "user"
  status     String   // "active" | "inactive"
  createdAt  DateTime @default(now())

  // Crypto artifacts persisted for FE verification
  emailHash  Bytes    // SHA-384 digest
  signature  Bytes    // signature over emailHash
  publicKey  Bytes    // signer public key (SPKI/raw)

  @@index([createdAt])
  @@map("users")
}
